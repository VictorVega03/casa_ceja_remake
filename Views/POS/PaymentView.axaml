<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        xmlns:helpers="using:CasaCejaRemake.Helpers"
        x:Class="CasaCejaRemake.Views.POS.PaymentView"
        x:DataType="vm:PaymentViewModel"
        Title="Cobro"
        Width="650"
        Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Resources>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.payment-method">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style Selector="Button.payment-method:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
        <Style Selector="Button.quick-amount">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.quick-amount:pointerover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="15">
        
        <!-- Header con totales -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="15" CornerRadius="4" Margin="0,0,0,15">
            <Grid ColumnDefinitions="*,*,*">
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalToPay, StringFormat='{}{0:C2}'}" 
                               FontSize="28" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="ABONADO" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPaid, StringFormat='{}{0:C2}'}" 
                               FontSize="28" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="RESTANTE" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding RemainingAmount, StringFormat='{}{0:C2}'}" 
                               FontSize="28" FontWeight="Bold" Foreground="{Binding RemainingColor}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" ColumnDefinitions="200,*">
            
            <!-- Metodos de pago -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock Text="MÃ‰TODO DE PAGO" FontSize="12" Foreground="#888" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Efectivo"
                        Background="{Binding IsEffectivoSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="15,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ’µ" FontSize="16"/>
                        <TextBlock Text="Efectivo"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Debito"
                        Background="{Binding IsDebitoSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="15,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ’³" FontSize="16"/>
                        <TextBlock Text="Tarjeta DÃ©bito"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Credito"
                        Background="{Binding IsCreditoSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="15,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ’³" FontSize="16"/>
                        <TextBlock Text="Tarjeta CrÃ©dito"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Transferencia"
                        Background="{Binding IsTransferenciaSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="15,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ¦" FontSize="16"/>
                        <TextBlock Text="Transferencia"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Cheque"
                        Background="{Binding IsChequesSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="15,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ·ï¸" FontSize="16"/>
                        <TextBlock Text="Cheque"/>
                    </StackPanel>
                </Button>

                <Separator Margin="0,10" Background="#444"/>
                
                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} artÃ­culo(s)'}" 
                           FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Panel de pagos realizados y entrada de monto -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                <!-- Input de monto actual -->
                <Border Grid.Row="0" Background="#252525" Padding="15" CornerRadius="4" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding CurrentMethodName, StringFormat='Agregar pago: {0}'}" 
                                       FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <Button Grid.Column="1" Content="F1 Pagar Restante" 
                                    Command="{Binding PayRemainingCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5" FontSize="11"/>
                        </Grid>
                        
                        <TextBox x:Name="TxtCurrentAmount"
                                 Text="{Binding CurrentAmount, Mode=TwoWay, StringFormat='{}{0:F2}'}"
                                 FontSize="24" FontWeight="Bold"
                                 Padding="10" Margin="0,10,0,0"
                                 Background="#3D3D3D" Foreground="White"
                                 BorderThickness="0" CornerRadius="4"
                                 HorizontalContentAlignment="Right"/>
                        
                        <WrapPanel Margin="0,10,0,0">
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F2]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="20" Margin="0">+$20</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F3]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="50" Margin="0">+$50</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F4]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="100" Margin="0">+$100</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F5]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="200" Margin="0">+$200</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F6]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="500" Margin="0">+$500</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F7]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding ClearCurrentCommand}" Margin="0">Limpiar</Button>
                            </StackPanel>
                        </WrapPanel>
                        
                        <Button Content="âž• Enter Agregar Pago" 
                                Command="{Binding AddPaymentCommand}"
                                Background="#0078D4" Foreground="White"
                                Padding="15,10" Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Lista de pagos agregados (dentro de Row=* para no desbordar) -->
                <Border Grid.Row="1" Background="#252525" Padding="10" CornerRadius="4">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Row="0" Text="PAGOS REGISTRADOS" FontSize="12" Foreground="#888" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PaymentsList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,3">
                                            <TextBlock Text="{Binding Method}" Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='{}{0:C2}'}" 
                                                       Foreground="#4CAF50" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
                                            <Button Grid.Column="2" Content="âœ•" 
                                                    Command="{Binding $parent[Window].((vm:PaymentViewModel)DataContext).RemovePaymentCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="#F44336" Foreground="White" Padding="8,4" FontSize="10"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="No hay pagos registrados" 
                                       Foreground="#666" FontStyle="Italic"
                                       IsVisible="{Binding !HasPayments}"
                                       HorizontalAlignment="Center" Margin="0,10"/>
                            
                            <!-- Cambio (solo si efectivo y sobra) -->
                            <Border Background="#1A3D1A" Padding="10" CornerRadius="4" Margin="0,10,0,0"
                                    IsVisible="{Binding ShowChange}">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="CAMBIO:" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Change, StringFormat='{}{0:C2}'}" 
                                               FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Error message -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ErrorMessage}" 
                   Foreground="#F44336"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   Margin="0,10,0,0"/>

        <!-- Botones de accion -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,15,0,0">
            <Button Grid.Column="0" 
                    Command="{Binding CancelCommand}"
                    Background="#3D3D3D"
                    Foreground="White"
                    Padding="15,12"
                    Margin="0,0,5,0"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="1" 
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding CanConfirm}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="15,12"
                    Margin="5,0,0,0"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Enter" FontWeight="Bold"/>
                    <TextBlock Text="Confirmar Venta"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>