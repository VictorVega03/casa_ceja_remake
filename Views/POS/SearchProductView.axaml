<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        x:Class="CasaCejaRemake.Views.POS.SearchProductView"
        x:DataType="vm:SearchProductViewModel"
        Title="Buscar Producto"
        Width="700"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="Button.action-btn">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.action-btn:pointerover">
            <Setter Property="Background" Value="#1084D8"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="15">
        
        <!-- Filtros de busqueda -->
        <Grid Grid.Row="0" ColumnDefinitions="*,200" Margin="0,0,0,10">
            <TextBox x:Name="TxtSearch"
                     Grid.Column="0"
                     Text="{Binding SearchTerm, Mode=TwoWay}"
                     Watermark="Buscar por codigo o nombre..."
                     FontSize="14"
                     Padding="10"
                     Background="#3D3D3D"
                     Foreground="White"
                     BorderThickness="0"
                     CornerRadius="4"
                     Margin="0,0,10,0"/>
            
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding Categories}"
                      SelectedValue="{Binding SelectedCategoryId}"
                      SelectedValueBinding="{Binding Id}"
                      DisplayMemberBinding="{Binding Name}"
                      Background="#3D3D3D"
                      Foreground="White"
                      Padding="10"
                      CornerRadius="4"/>
        </Grid>

        <!-- Botones de busqueda -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Classes="action-btn" Command="{Binding SearchCommand}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Buscar"/>
                </StackPanel>
            </Button>
            <Button Classes="action-btn" Command="{Binding ClearCommand}" Background="#3D3D3D">
                <TextBlock Text="Limpiar"/>
            </Button>
        </StackPanel>

        <!-- Resultados -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="5" CornerRadius="4">
            <DataGrid x:Name="GridResults"
                      ItemsSource="{Binding SearchResults}"
                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                      SelectedIndex="{Binding SelectedProductIndex, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="#2D2D2D"
                      BorderThickness="0">
                <DataGrid.Styles>
                    <Style Selector="DataGridRow">
                        <Setter Property="Background" Value="#2D2D2D"/>
                    </Style>
                    <Style Selector="DataGridRow:nth-child(even)">
                        <Setter Property="Background" Value="#353535"/>
                    </Style>
                    <Style Selector="DataGridRow:selected">
                        <Setter Property="Background" Value="#4A4A4A"/>
                    </Style>
                    <Style Selector="DataGridCell">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="#888"/>
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.Styles>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CODIGO" Binding="{Binding Barcode}" Width="120"/>
                    <DataGridTextColumn Header="NOMBRE" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="PRECIO" Binding="{Binding PriceRetail, StringFormat='{}{0:C2}'}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Selector de cantidad -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="10" CornerRadius="4" Margin="0,10,0,0">
            <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                <TextBlock Grid.Column="0" 
                           Text="Cantidad:" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding DecrementQuantityCommand}"
                            Width="35"
                            Height="35"
                            Background="#3D3D3D"
                            Foreground="White"
                            CornerRadius="4">
                        <TextBlock Text="-" FontSize="16" FontWeight="Bold"/>
                    </Button>
                    
                    <TextBox Text="{Binding Quantity, Mode=TwoWay}"
                             Width="60"
                             Height="35"
                             FontSize="16"
                             FontWeight="Bold"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Background="#3D3D3D"
                             Foreground="White"
                             BorderThickness="0"
                             Margin="5,0"/>
                    
                    <Button Command="{Binding IncrementQuantityCommand}"
                            Width="35"
                            Height="35"
                            Background="#3D3D3D"
                            Foreground="White"
                            CornerRadius="4">
                        <TextBlock Text="+" FontSize="16" FontWeight="Bold"/>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Column="2" 
                           Text="{Binding StatusMessage}" 
                           Foreground="#888" 
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>

                <!-- Indicador de carga -->
                <ProgressBar Grid.Column="3" 
                             IsIndeterminate="{Binding IsSearching}"
                             IsVisible="{Binding IsSearching}"
                             Width="50"
                             Height="4"/>
            </Grid>
        </Border>

        <!-- Botones de accion -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto,Auto" Margin="0,15,0,0">
            <TextBlock Grid.Column="0" 
                       Text="Enter: Seleccionar | Esc: Cancelar" 
                       Foreground="#666" 
                       VerticalAlignment="Center"
                       FontSize="11"/>
            
            <Button Grid.Column="1" 
                    Command="{Binding CancelCommand}"
                    Background="#3D3D3D"
                    Foreground="White"
                    Padding="20,10"
                    Margin="0,0,5,0"
                    CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="2" 
                    Command="{Binding ConfirmCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="20,10"
                    Margin="5,0,0,0"
                    CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Enter" FontWeight="Bold"/>
                    <TextBlock Text="Agregar"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>