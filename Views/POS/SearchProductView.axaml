<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        x:Class="CasaCejaRemake.Views.POS.SearchProductView"
        x:DataType="vm:SearchProductViewModel"
        Title="Buscar Producto"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        Focusable="True">

    <Window.Styles>
        <Style Selector="Button.action-btn">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.action-btn:pointerover">
            <Setter Property="Background" Value="#1084D8"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto,Auto" Margin="20">
        
        <!-- Filtros de busqueda -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,0,0,10">
            <TextBox x:Name="TxtSearch"
                     Grid.Column="0"
                     Text="{Binding SearchTerm, Mode=TwoWay}"
                     Watermark="Buscar por codigo o nombre... (presiona Enter para buscar)"
                     FontSize="16"
                     Padding="15"
                     Background="#3D3D3D"
                     Foreground="White"
                     BorderThickness="0"
                     CornerRadius="4"
                     Margin="0,0,10,0"/>
            
            <!-- Dropdown de CategorÃ­a -->
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding Categories}"
                      SelectedValue="{Binding SelectedCategoryId}"
                      SelectedValueBinding="{Binding Id}"
                      DisplayMemberBinding="{Binding Name}"
                      Margin="0,0,10,0"/>
            
            <!-- Dropdown de Medida -->
            <ComboBox Grid.Column="2"
                      ItemsSource="{Binding Units}"
                      SelectedValue="{Binding SelectedUnitId}"
                      SelectedValueBinding="{Binding Id}"
                      DisplayMemberBinding="{Binding Name}"
                      Margin="0,0,10,0"/>
            
            <!-- BotÃ³n Ver Existencia -->
            <Button Grid.Column="3"
                    x:Name="BtnExistencia"
                    Content="ðŸ“¦ Ver Existencia"
                    Background="#FF9800"
                    Foreground="White"
                    Padding="15,10"
                    CornerRadius="4"
                    IsEnabled="{Binding SelectedProduct, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Click="OnVerExistenciaClick"/>
        </Grid>

        <!-- Botones de busqueda -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Classes="action-btn" Command="{Binding SearchCommand}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="ðŸ”"/>
                    <TextBlock Text="Buscar (Enter)"/>
                </StackPanel>
            </Button>
            <Button Classes="action-btn" Command="{Binding ClearCommand}" Background="#3D3D3D">
                <TextBlock Text="Limpiar"/>
            </Button>
        </StackPanel>

        <!-- Resultados con TODAS las columnas -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="5" CornerRadius="4">
            <DataGrid x:Name="GridResults"
                      ItemsSource="{Binding SearchResults}"
                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                      SelectedIndex="{Binding SelectedProductIndex, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="#2D2D2D"
                      BorderThickness="0"
                      CanUserResizeColumns="True">
                <DataGrid.Styles>
                    <Style Selector="DataGridRow">
                        <Setter Property="Background" Value="#2D2D2D"/>
                    </Style>
                    <Style Selector="DataGridRow:nth-child(even)">
                        <Setter Property="Background" Value="#353535"/>
                    </Style>
                    <Style Selector="DataGridRow:selected">
                        <Setter Property="Background" Value="#4A4A4A"/>
                    </Style>
                    <Style Selector="DataGridCell">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="#888"/>
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="8,4"/>
                    </Style>
                </DataGrid.Styles>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CÃ“DIGO" Binding="{Binding Barcode}" Width="120"/>
                    <DataGridTextColumn Header="NOMBRE" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="CATEGORÃA" Binding="{Binding CategoryName}" Width="120"/>
                    <DataGridTextColumn Header="PRESENTACIÃ“N" Binding="{Binding Presentation}" Width="100"/>
                    <DataGridTextColumn Header="MEDIDA" Binding="{Binding UnitName}" Width="80"/>
                    <DataGridTextColumn Header="P. VENTA" Binding="{Binding PriceRetail, StringFormat='{}{0:C2}'}" Width="100"/>
                    <DataGridTextColumn Header="P. MAYOREO" Binding="{Binding PriceWholesale, StringFormat='{}{0:C2}'}" Width="100"/>
                    <DataGridTextColumn Header="CANT. MAY." Binding="{Binding WholesaleQuantity}" Width="80"/>
                    <DataGridTextColumn Header="P. ESPECIAL" Binding="{Binding PriceSpecial, StringFormat='{}{0:C2}'}" Width="100"/>
                    <DataGridTextColumn Header="P. VENDEDOR" Binding="{Binding PriceDealer, StringFormat='{}{0:C2}'}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- PaginaciÃ³n -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="10" CornerRadius="4" Margin="0,10,0,0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <Button Content="â—€ Anterior"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CanGoPrevious}"
                            Background="#3D3D3D"
                            Foreground="White"
                            Padding="15,8"
                            CornerRadius="4"/>
                    <TextBlock Text="{Binding PaginationInfo}"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                    <Button Content="Siguiente â–¶"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoNext}"
                            Background="#3D3D3D"
                            Foreground="White"
                            Padding="15,8"
                            CornerRadius="4"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2" 
                           Text="{Binding StatusMessage}" 
                           Foreground="#888" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Selector de cantidad -->
        <Border Grid.Row="4" Background="#2D2D2D" Padding="10" CornerRadius="4" Margin="0,10,0,0">
            <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                <TextBlock Grid.Column="0" 
                           Text="Cantidad:" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           FontSize="16"
                           Margin="0,0,10,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding DecrementQuantityCommand}"
                            Width="40"
                            Height="40"
                            Background="#3D3D3D"
                            Foreground="White"
                            CornerRadius="4">
                        <TextBlock Text="-" FontSize="20" FontWeight="Bold"/>
                    </Button>
                    
                    <TextBox Text="{Binding Quantity, Mode=TwoWay}"
                             Width="80"
                             Height="40"
                             FontSize="18"
                             FontWeight="Bold"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Background="#3D3D3D"
                             Foreground="White"
                             BorderThickness="0"
                             Margin="5,0"/>
                    
                    <Button Command="{Binding IncrementQuantityCommand}"
                            Width="40"
                            Height="40"
                            Background="#3D3D3D"
                            Foreground="White"
                            CornerRadius="4">
                        <TextBlock Text="+" FontSize="20" FontWeight="Bold"/>
                    </Button>
                </StackPanel>

                <!-- Indicador de carga -->
                <ProgressBar Grid.Column="3" 
                             IsIndeterminate="{Binding IsSearching}"
                             IsVisible="{Binding IsSearching}"
                             Width="50"
                             Height="4"/>
            </Grid>
        </Border>

        <!-- Botones de accion -->
        <Grid Grid.Row="5" ColumnDefinitions="*,Auto,Auto" Margin="0,15,0,0">
            <TextBlock Grid.Column="0" 
                       Text="Enter: Seleccionar | Esc: Cancelar | â†“: Ir a lista" 
                       Foreground="#666" 
                       VerticalAlignment="Center"
                       FontSize="12"/>
            
            <Button Grid.Column="1" 
                    Command="{Binding CancelCommand}"
                    Background="#3D3D3D"
                    Foreground="White"
                    Padding="25,12"
                    Margin="0,0,5,0"
                    CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="2" 
                    Command="{Binding ConfirmCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="25,12"
                    Margin="5,0,0,0"
                    CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Enter" FontWeight="Bold"/>
                    <TextBlock Text="Agregar al Carrito"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>