<!-- CustomerCreditsLayawaysView.axaml -->
<!-- Renombrar a .axaml para usar -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="500"
        x:Class="CasaCejaRemake.Views.POS.CustomerCreditsLayawaysView"
        x:DataType="vm:CustomerCreditsLayawaysViewModel"
        Title="{Binding WindowTitle}"
        Width="750" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="RowBackground" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D3D"/>
        </Style>
        <Style Selector="DataGridRow:nth-child(2n) /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#252525"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#4CAF50"/>
        </Style>
        <Style Selector="Button.action">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        <Style Selector="Button.action:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
        <Style Selector="Button.action:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="{Binding HeaderColor}" Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <TextBlock Text="{Binding HeaderTitle}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding CustomerName}"
                               FontSize="14"
                               Foreground="#DDDDDD"
                               Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Total pendiente:" 
                               Foreground="#DDDDDD" 
                               FontSize="12"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding TotalPending, StringFormat='{}{0:C2}'}" 
                               Foreground="White" 
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary -->
        <Border Grid.Row="1" Background="#252525" Padding="10">
            <Grid ColumnDefinitions="*,*,*">
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ItemCount}" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="PENDIENTES" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PendingCount}" 
                               Foreground="#FF9800" 
                               FontSize="16" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="PAGADOS" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PaidCount}" 
                               Foreground="#4CAF50" 
                               FontSize="16" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Credits DataGrid (visible when IsCreditsMode) -->
        <DataGrid x:Name="DataGridCredits"
                  Grid.Row="2"
                  ItemsSource="{Binding Credits}"
                  SelectedItem="{Binding SelectedCredit}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  IsVisible="{Binding IsCreditsMode}"
                  Margin="10"
                  SelectionMode="Single"
                  KeyDown="DataGrid_KeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FOLIO" Binding="{Binding Folio}" Width="140"/>
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='{}{0:C2}'}" Width="100"/>
                <DataGridTextColumn Header="PAGADO" Binding="{Binding TotalPaid, StringFormat='{}{0:C2}'}" Width="100"/>
                <DataGridTextColumn Header="SALDO" Binding="{Binding RemainingBalance, StringFormat='{}{0:C2}'}" Width="100"/>
                <DataGridTextColumn Header="MESES" Binding="{Binding MonthsToPay}" Width="60"/>
                <DataGridTextColumn Header="VENCE" Binding="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="90"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding StatusName}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Layaways DataGrid (visible when NOT IsCreditsMode) -->
        <DataGrid x:Name="DataGridLayaways"
                  Grid.Row="2"
                  ItemsSource="{Binding Layaways}"
                  SelectedItem="{Binding SelectedLayaway}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  IsVisible="{Binding !IsCreditsMode}"
                  Margin="10"
                  SelectionMode="Single"
                  KeyDown="DataGrid_KeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FOLIO" Binding="{Binding Folio}" Width="140"/>
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='{}{0:C2}'}" Width="100"/>
                <DataGridTextColumn Header="PAGADO" Binding="{Binding TotalPaid, StringFormat='{}{0:C2}'}" Width="100"/>
                <DataGridTextColumn Header="SALDO" Binding="{Binding RemainingBalance, StringFormat='{}{0:C2}'}" Width="100"/>
                <DataGridTextColumn Header="ENTREGA" Binding="{Binding PickupDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="90"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding StatusName}" Width="90"/>
                <DataGridTemplateColumn Header="LISTO" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CanDeliver}" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="15">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,*">
                <!-- Add Payment Button -->
                <Button Grid.Column="1"
                        Command="{Binding AddPaymentCommand}"
                        Background="#4CAF50"
                        Classes="action"
                        IsEnabled="{Binding CanAddPayment}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F5"/>
                        <TextBlock Text="Abonar"/>
                    </StackPanel>
                </Button>

                <!-- Deliver Button (only for layaways) -->
                <Button Grid.Column="2"
                        Command="{Binding DeliverCommand}"
                        Background="#2196F3"
                        Classes="action"
                        IsVisible="{Binding !IsCreditsMode}"
                        IsEnabled="{Binding CanDeliver}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F6"/>
                        <TextBlock Text="Entregar"/>
                    </StackPanel>
                </Button>

                <!-- Print Button -->
                <Button Grid.Column="3"
                        Command="{Binding PrintCommand}"
                        Background="#FF9800"
                        Classes="action"
                        IsEnabled="{Binding HasSelection}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F7"/>
                        <TextBlock Text="Imprimir"/>
                    </StackPanel>
                </Button>

                <!-- Close Button -->
                <Button Grid.Column="4"
                        Content="Salir (Esc)"
                        Command="{Binding CloseCommand}"
                        Background="#555555"
                        Classes="action"/>
            </Grid>
        </Border>
    </Grid>
</Window>
