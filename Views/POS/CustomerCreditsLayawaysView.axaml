<!-- CustomerCreditsLayawaysView.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="600"
        x:Class="CasaCejaRemake.Views.POS.CustomerCreditsLayawaysView"
        x:CompileBindings="False"
        x:DataType="vm:CustomerCreditsLayawaysViewModel"
        Title="{Binding WindowTitle}"
        Width="850" Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="RowBackground" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D3D"/>
        </Style>
        <Style Selector="DataGridRow:nth-child(2n) /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#252525"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#4CAF50"/>
        </Style>
        <Style Selector="Button.action">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.action:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
        <Style Selector="Button.action:disabled">
            <Setter Property="Opacity" Value="0.4"/>
        </Style>
        <Style Selector="Border.info-card">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="15">
        <!-- Header con informaciÃ³n del cliente -->
        <Border Grid.Row="0" Background="{Binding HeaderColor}" Padding="20" CornerRadius="8" Margin="0,0,0,15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <TextBlock Text="{Binding HeaderTitle}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,8,0,0">
                        <Border Background="#00000030" Padding="10,5" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="ðŸ‘¤" FontSize="14"/>
                                <TextBlock Text="{Binding CustomerName}"
                                           FontSize="14"
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#00000030" Padding="10,5" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="ðŸ“ž" FontSize="14"/>
                                <TextBlock Text="{Binding CustomerPhone}"
                                           FontSize="14"
                                           Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Total pendiente:" 
                               Foreground="#E0E0E0" 
                               FontSize="13"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalPending, StringFormat='{}{0:C2}'}" 
                               Foreground="White" 
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- EstadÃ­sticas en tarjetas -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="0,0,0,15">
            <!-- Total -->
            <Border Grid.Column="0" Classes="info-card" Margin="0,0,6,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="TOTAL" 
                               Foreground="#888888" 
                               FontSize="11" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ItemCount}" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="registros" 
                               Foreground="#AAAAAA" 
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Pendientes -->
            <Border Grid.Column="1" Classes="info-card" Margin="6,0,6,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="PENDIENTES" 
                               Foreground="#888888" 
                               FontSize="11" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PendingCount}" 
                               Foreground="#FF9800" 
                               FontSize="24" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="activos" 
                               Foreground="#AAAAAA" 
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Pagados -->
            <Border Grid.Column="2" Classes="info-card" Margin="6,0,0,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="COMPLETADOS" 
                               Foreground="#888888" 
                               FontSize="11" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PaidCount}" 
                               Foreground="#4CAF50" 
                               FontSize="24" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="liquidados" 
                               Foreground="#AAAAAA" 
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Separador -->
        <Border Grid.Row="2" Height="1" Background="#3D3D3D" Margin="0,0,0,15"/>

        <!-- Credits DataGrid (visible when IsCreditsMode) -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Credits}"
                  SelectedItem="{Binding SelectedCredit, Mode=TwoWay}"
                  IsVisible="{Binding IsCreditsMode}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FOLIO" Binding="{Binding Folio, Mode=OneWay}" Width="150"/>
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='{}{0:C2}', Mode=OneWay}" Width="110"/>
                <DataGridTextColumn Header="PAGADO" Binding="{Binding TotalPaid, StringFormat='{}{0:C2}', Mode=OneWay}" Width="110"/>
                <DataGridTextColumn Header="SALDO" Binding="{Binding RemainingBalance, StringFormat='{}{0:C2}', Mode=OneWay}" Width="110"/>
                <DataGridTextColumn Header="MESES" Binding="{Binding MonthsToPay, Mode=OneWay}" Width="70"/>
                <DataGridTextColumn Header="VENCE" Binding="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}', Mode=OneWay}" Width="100"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding StatusName, Mode=OneWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Layaways DataGrid (visible when NOT IsCreditsMode) -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Layaways}"
                  SelectedItem="{Binding SelectedLayaway, Mode=TwoWay}"
                  IsVisible="{Binding !IsCreditsMode}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FOLIO" Binding="{Binding Folio, Mode=OneWay}" Width="150"/>
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='{}{0:C2}', Mode=OneWay}" Width="110"/>
                <DataGridTextColumn Header="PAGADO" Binding="{Binding TotalPaid, StringFormat='{}{0:C2}', Mode=OneWay}" Width="110"/>
                <DataGridTextColumn Header="SALDO" Binding="{Binding RemainingBalance, StringFormat='{}{0:C2}', Mode=OneWay}" Width="110"/>
                <DataGridTextColumn Header="ENTREGA" Binding="{Binding PickupDate, StringFormat='{}{0:dd/MM/yyyy}', Mode=OneWay}" Width="100"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding StatusName, Mode=OneWay}" Width="*"/>
                <DataGridTextColumn Header="LISTO" Binding="{Binding CanDeliver, Mode=OneWay}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <Border Grid.Row="4" Background="#2D2D2D" Padding="15" CornerRadius="8" Margin="0,15,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,*">
                <!-- Add Payment Button -->
                <Button Grid.Column="1"
                        Command="{Binding AddPaymentCommand}"
                        Background="#4CAF50"
                        Classes="action">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="F5" FontSize="12" Opacity="0.8"/>
                        <TextBlock Text="ðŸ’°"/>
                        <TextBlock Text="Abonar"/>
                    </StackPanel>
                </Button>

                <!-- Deliver Button (only for layaways) -->
                <Button Grid.Column="2"
                        Command="{Binding DeliverCommand}"
                        IsVisible="{Binding !IsCreditsMode}"
                        Background="#2196F3"
                        Classes="action">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="F6" FontSize="12" Opacity="0.8"/>
                        <TextBlock Text="ðŸ“¦"/>
                        <TextBlock Text="Entregar"/>
                    </StackPanel>
                </Button>

                <!-- Print Button -->
                <Button Grid.Column="3"
                        Command="{Binding PrintCommand}"
                        Background="#FF9800"
                        Classes="action">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="F7" FontSize="12" Opacity="0.8"/>
                        <TextBlock Text="ðŸ–¨ï¸"/>
                        <TextBlock Text="Imprimir"/>
                    </StackPanel>
                </Button>

                <!-- Close Button -->
                <Button Grid.Column="4"
                        Command="{Binding CloseCommand}"
                        Background="#555555"
                        Classes="action">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Esc" FontSize="12" Opacity="0.8"/>
                        <TextBlock Text="Salir"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
