<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        x:Class="CasaCejaRemake.Views.POS.CashMovementView"
        x:DataType="vm:CashMovementViewModel"
        Title="{Binding Title}"
        Width="400"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#66BB6A"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
    </Window.Styles>


    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="20">
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Title}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Tipo -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="TIPO:" 
                       FontSize="12" 
                       Foreground="#888" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>
            <RadioButton Content="Gasto" 
                         IsChecked="{Binding IsExpense}"
                         GroupName="MovementType"/>
            <RadioButton Content="Ingreso" 
                         IsChecked="{Binding !IsExpense}"
                         GroupName="MovementType"/>
        </StackPanel>

        <!-- Concepto -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="CONCEPTO (F1)" 
                       FontSize="12" 
                       Foreground="#888" 
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="TxtConcept"
                     Text="{Binding Concept, Mode=TwoWay}"
                     Watermark="Ej: Comida, Pago de luz, etc."
                     FontSize="14"/>
        </StackPanel>

        <!-- Monto -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="MONTO (F2)" 
                       FontSize="12" 
                       Foreground="#888" 
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0" 
                           Text="$" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox x:Name="TxtAmount"
                         Grid.Column="1"
                         Text="{Binding Amount, Mode=TwoWay, StringFormat='{}{0:F2}'}"
                         FontSize="20"
                         FontWeight="Bold"
                         HorizontalContentAlignment="Right"/>
            </Grid>
        </StackPanel>


        <!-- Mensaje de error -->
        <Border Grid.Row="4" 
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                Background="#FFEBEE"
                BorderBrush="#F44336"
                BorderThickness="2"
                CornerRadius="4"
                Padding="15"
                Margin="0,10,0,0"
                VerticalAlignment="Top">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#C62828"
                       FontSize="13"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </Border>


        <!-- Botones -->
        <Grid Grid.Row="5" ColumnDefinitions="*,*" Margin="0,15,0,0">
            <Button Grid.Column="0" 
                    Classes="secondary"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="1" 
                    Classes="primary"
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="F5" FontWeight="Bold"/>
                    <TextBlock Text="Aceptar"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
