<!-- SaleDetailView.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="CasaCejaRemake.Views.POS.SaleDetailView"
        x:DataType="vm:SaleDetailViewModel"
        Title="Detalle de Venta"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="RowBackground" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D3D"/>
        </Style>
        <Style Selector="DataGridRow:nth-child(2n) /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#252525"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <TextBlock Text="DETALLE DE VENTA"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Foreground="#4CAF50" FontSize="14" Margin="0,5,0,0">
                        <Run Text="Folio: "/>
                        <Run Text="{Binding Folio}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
                <TextBlock Grid.Column="1" 
                           Text="{Binding FormattedDate}"
                           Foreground="#AAAAAA"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Grid>
        </Border>

        <!-- Main Content: 65/35 Split -->
        <Grid Grid.Row="1" ColumnDefinitions="65*,2,35*">
            
            <!-- LEFT SIDE: Sale Details and Products -->
            <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto" Margin="10">
                <!-- Sale Info -->
                <Border Grid.Row="0" Background="#252525" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                    <Grid ColumnDefinitions="*,*">
                        <StackPanel Grid.Column="0" Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Usuario: " Foreground="#888" Width="80"/>
                                <TextBlock Text="{Binding UserName}" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Sucursal: " Foreground="#888" Width="80"/>
                                <TextBlock Text="{Binding BranchName}" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="8">
                            <StackPanel>
                                <TextBlock Text="Pago:" Foreground="#888" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding PaymentSummary}" 
                                           Foreground="#4CAF50"
                                           TextWrapping="Wrap"
                                           MaxWidth="250"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Cambio: " Foreground="#888" Width="80"/>
                                <TextBlock Text="{Binding ChangeGiven, StringFormat='{}{0:C2}'}" Foreground="#FF9800"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Products Grid -->
                <Border Grid.Row="1" Background="#252525" Padding="10" CornerRadius="5">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0" 
                                   Text="PRODUCTOS DE LA VENTA" 
                                   FontSize="12" 
                                   Foreground="#888" 
                                   FontWeight="Bold" 
                                   Margin="5,0,0,10"/>
                        
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Products}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="PRODUCTO" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="CANT" Binding="{Binding Quantity}" Width="75"/>
                                <DataGridTextColumn Header="P. LISTA" Binding="{Binding ListPrice, StringFormat='{}{0:C2}'}" Width="95"/>
                                <DataGridTextColumn Header="P. FINAL" Binding="{Binding FinalUnitPrice, StringFormat='{}{0:C2}'}" Width="95"/>
                                <DataGridTextColumn Header="TOTAL" Binding="{Binding LineTotal, StringFormat='{}{0:C2}'}" Width="95"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Totals -->
                <Border Grid.Row="2" Background="#2D2D2D" Padding="15" CornerRadius="5" Margin="0,10,0,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="1" Width="250">
                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,5">
                                <TextBlock Text="Subtotal:" Foreground="#AAAAAA"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Subtotal, StringFormat='{}{0:C2}'}" 
                                           Foreground="White"/>
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,5">
                                <TextBlock Text="Descuento:" Foreground="#FF9800"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Discount, StringFormat='-{0:C2}'}" 
                                           Foreground="#FF9800"/>
                            </Grid>
                            <Separator Background="#444" Margin="0,5"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="TOTAL:" FontSize="18" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Total, StringFormat='{}{0:C2}'}" 
                                           FontSize="20"
                                           Foreground="#4CAF50" 
                                           FontWeight="Bold"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- SEPARATOR -->
            <Border Grid.Column="1" Background="#3D3D3D"/>

            <!-- RIGHT SIDE: Ticket Preview -->
            <Grid Grid.Column="2" RowDefinitions="Auto,*" Margin="10">
                <Border Grid.Row="0" 
                        Background="#252525" 
                        Padding="10" 
                        CornerRadius="5"
                        Margin="0,0,0,10">
                    <TextBlock Text="VISTA PREVIA DEL TICKET" 
                               FontSize="12" 
                               Foreground="#888" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <Border Grid.Row="1" 
                        Background="#FFFFFF" 
                        CornerRadius="5"
                        Padding="15"
                        BorderBrush="#3D3D3D"
                        BorderThickness="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding TicketText}"
                                   FontFamily="Courier New"
                                   FontSize="11"
                                   Foreground="Black"
                                   TextWrapping="NoWrap"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Buttons -->
        <Border Grid.Row="2" Background="#1A1A1A" Padding="15">
            <Grid ColumnDefinitions="*,Auto,Auto,*">
                <Button Grid.Column="1"
                        Command="{Binding ReprintCommand}"
                        Background="#0078D4"
                        Foreground="White"
                        Padding="20,10"
                        Margin="5,0">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F5"/>
                        <TextBlock Text="Reimprimir Ticket"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2"
                        Content="Cerrar (Esc)"
                        Command="{Binding CloseCommand}"
                        Background="#555555"
                        Foreground="White"
                        Padding="20,10"
                        Margin="5,0"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                IsVisible="{Binding IsLoading}">
            <Border Background="#2D2D2D" 
                    Padding="30" 
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="15">
                    <ProgressBar IsIndeterminate="True" Width="200"/>
                    <TextBlock Text="Cargando detalles..." 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
