<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="CasaCejaRemake.Views.POS.QuickCustomerView"
        x:DataType="vm:QuickCustomerViewModel"
        Title="Alta Rapida de Cliente"
        Width="400" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>
        <Style Selector="TextBlock.required">
            <Setter Property="Foreground" Value="#FF5252"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="15">
            <TextBlock Text="ALTA RAPIDA DE CLIENTE"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" Margin="20,10">
            <StackPanel>
                <!-- Nombre (obligatorio) -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nombre" Classes="label"/>
                    <TextBlock Text=" *" Classes="label required"/>
                </StackPanel>
                <TextBox x:Name="NameBox"
                         Text="{Binding Name}"
                         Watermark="Nombre completo del cliente"/>

                <!-- Telefono (obligatorio) -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Telefono" Classes="label"/>
                    <TextBlock Text=" *" Classes="label required"/>
                </StackPanel>
                <TextBox Text="{Binding Phone}"
                         Watermark="10 digitos"/>

                <!-- Email (opcional) -->
                <TextBlock Text="Email" Classes="label"/>
                <TextBox Text="{Binding Email}"
                         Watermark="correo@ejemplo.com"/>

                <!-- RFC (opcional) -->
                <TextBlock Text="RFC" Classes="label"/>
                <TextBox Text="{Binding Rfc}"
                         Watermark="RFC (opcional)"/>

                <!-- Calle (opcional) -->
                <TextBlock Text="Calle" Classes="label"/>
                <TextBox Text="{Binding Street}"
                         Watermark="Direccion"/>

                <!-- Ciudad (opcional) -->
                <TextBlock Text="Ciudad" Classes="label"/>
                <TextBox Text="{Binding City}"
                         Watermark="Ciudad"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                Margin="20,5"
                IsVisible="{Binding HasError}"
                Background="#FF5252"
                CornerRadius="5"
                Padding="10">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="White"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="10">
            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="0"
                        Command="{Binding SaveCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Center"
                        IsEnabled="{Binding !IsSaving}"
                        HotKey="F5">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F5"/>
                        <TextBlock Text="Guardar"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1"
                        Content="Cancelar (Esc)"
                        Command="{Binding CancelCommand}"
                        Background="#555555"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Center"
                        HotKey="Escape"/>
            </Grid>
        </Border>
    </Grid>
</Window>
