<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="350"
        x:Class="CasaCejaRemake.Views.POS.QuickCustomerView"
        x:DataType="vm:QuickCustomerViewModel"
        Title="Alta de Cliente"
        Width="550" Height="350"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>
        <Style Selector="TextBlock.required">
            <Setter Property="Foreground" Value="#FF5252"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="15">
            <TextBlock Text="ALTA DE CLIENTE"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form - Grid de 2 columnas -->
        <ScrollViewer Grid.Row="1" Margin="20,10">
            <Grid ColumnDefinitions="*,20,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                
                <!-- Fila 1: Nombre y Teléfono -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nombre" Classes="label"/>
                        <TextBlock Text=" *" Classes="label required"/>
                    </StackPanel>
                    <TextBox x:Name="NameBox"
                             Text="{Binding Name}"
                             Watermark="Nombre completo"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Teléfono" Classes="label"/>
                        <TextBlock Text=" *" Classes="label required"/>
                    </StackPanel>
                    <TextBox Text="{Binding Phone}"
                             Watermark="10 dígitos"/>
                </StackPanel>

                <!-- Fila 2: Email y RFC -->
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Email" Classes="label"/>
                    <TextBox Text="{Binding Email}"
                             Watermark="correo@ejemplo.com"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="RFC" Classes="label"/>
                    <TextBox Text="{Binding Rfc}"
                             Watermark="RFC (opcional)"/>
                </StackPanel>

                <!-- Fila 3: Calle y Ciudad -->
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Calle" Classes="label"/>
                    <TextBox Text="{Binding Street}"
                             Watermark="Dirección"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Ciudad" Classes="label"/>
                    <TextBox Text="{Binding City}"
                             Watermark="Ciudad"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                Margin="20,5"
                IsVisible="{Binding HasError}"
                Background="#FF5252"
                CornerRadius="5"
                Padding="10">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="White"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="10">
            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="0"
                        Command="{Binding SaveCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Center"
                        IsEnabled="{Binding !IsSaving}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F5"/>
                        <TextBlock Text="Guardar"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1"
                        Content="Cancelar (Esc)"
                        Command="{Binding CancelCommand}"
                        Background="#555555"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
