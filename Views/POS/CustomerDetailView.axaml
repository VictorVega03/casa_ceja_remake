<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="420"
        x:Class="CasaCejaRemake.Views.POS.CustomerDetailView"
        x:DataType="vm:CustomerDetailViewModel"
        Title="Detalles de Cliente"
        Width="750" Height="420"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="Border.section">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="10,6"/>
        </Style>
        <Style Selector="TextBlock.field-label">
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="TextBlock.field-value">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
        </Style>
        <Style Selector="TextBlock.stat-label">
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="TextBlock.stat-value">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="20,14">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <TextBlock Text="DETALLES DEL CLIENTE"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock Text="-"
                           FontSize="20"
                           Foreground="#555"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CustomerName}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="6,0">
            <StackPanel>
                <!-- Información de Contacto -->
                <Border Classes="section">
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" RowSpacing="14" ColumnSpacing="20">
                        <!-- Row 0 -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Classes="field-label" Text="Teléfono"/>
                            <TextBlock Classes="field-value" Text="{Binding CustomerPhone}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Classes="field-label" Text="Email"/>
                            <TextBlock Classes="field-value" Text="{Binding CustomerEmail}" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Classes="field-label" Text="RFC"/>
                            <TextBlock Classes="field-value" Text="{Binding CustomerRfc}"/>
                        </StackPanel>

                        <!-- Row 1 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBlock Classes="field-label" Text="Dirección"/>
                            <TextBlock Classes="field-value" Text="{Binding CustomerAddress}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Classes="field-label" Text="Fecha de Registro"/>
                            <TextBlock Classes="field-value" Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Créditos y Apartados lado a lado -->
                <Grid ColumnDefinitions="*,*">
                    <!-- Créditos -->
                    <Border Grid.Column="0" Classes="section">
                        <StackPanel>
                            <TextBlock Text="CRÉDITOS"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>

                            <Grid ColumnDefinitions="*,*" Margin="0,12,0,0">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="stat-label" Text="Total"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding TotalCredits}"
                                               Foreground="#4CAF50"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Classes="stat-label" Text="Activos"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding ActiveCredits}"
                                               Foreground="#FF9800"/>
                                </StackPanel>
                            </Grid>

                            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="stat-label" Text="Total Acreditado"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding TotalCreditAmount, StringFormat='${0:N2}'}"
                                               FontSize="15"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Classes="stat-label" Text="Saldo Pendiente"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding TotalCreditBalance, StringFormat='${0:N2}'}"
                                               FontSize="15"
                                               Foreground="#F44336"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Apartados -->
                    <Border Grid.Column="1" Classes="section">
                        <StackPanel>
                            <TextBlock Text="APARTADOS"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>

                            <Grid ColumnDefinitions="*,*" Margin="0,12,0,0">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="stat-label" Text="Total"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding TotalLayaways}"
                                               Foreground="#2196F3"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Classes="stat-label" Text="Activos"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding ActiveLayaways}"
                                               Foreground="#FF9800"/>
                                </StackPanel>
                            </Grid>

                            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="stat-label" Text="Total Apartado"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding TotalLayawayAmount, StringFormat='${0:N2}'}"
                                               FontSize="15"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Classes="stat-label" Text="Saldo Pendiente"/>
                                    <TextBlock Classes="stat-value"
                                               Text="{Binding TotalLayawayBalance, StringFormat='${0:N2}'}"
                                               FontSize="15"
                                               Foreground="#F44336"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="12">
            <Button Content="Cerrar (Esc)"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Center"
                    Background="#555555"
                    Foreground="White"
                    Padding="30,10"
                    CornerRadius="5"
                    FontSize="14"/>
        </Border>
    </Grid>
</Window>
