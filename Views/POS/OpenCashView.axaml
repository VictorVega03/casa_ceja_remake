<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        x:Class="CasaCejaRemake.Views.POS.OpenCashView"
        x:DataType="vm:OpenCashViewModel"
        Title="Apertura de Caja"
        Width="400"
        Height="280"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#66BB6A"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="APERTURA DE CAJA" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Ingrese el fondo inicial para comenzar el turno" 
                       FontSize="12" 
                       Foreground="#888" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Contenido principal -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="FONDO DE APERTURA (F1)" 
                       FontSize="12" 
                       Foreground="#888" 
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            
            <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0" 
                           Text="$" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox x:Name="TxtOpeningAmount"
                         Grid.Column="1"
                         Text="{Binding OpeningAmountString, Mode=TwoWay}"
                         FontSize="24"
                         FontWeight="Bold"
                         HorizontalContentAlignment="Right"/>
            </Grid>
        </StackPanel>

        <!-- Mensaje de error -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ErrorMessage}" 
                   Foreground="#F44336"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"/>

        <!-- Botones -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,20,0,0">
            <Button Grid.Column="0" 
                    Classes="secondary"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="1" 
                    Classes="primary"
                    Command="{Binding OpenCashCommand}"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="F5" FontWeight="Bold"/>
                    <TextBlock Text="Aceptar"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
