<!-- SalesHistoryView.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="CasaCejaRemake.Views.POS.SalesHistoryView"
        x:DataType="vm:SalesHistoryViewModel"
        Title="Historial de Ventas"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="Button.filter">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style Selector="Button.filter:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#66BB6A"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#1084D8"/>
        </Style>
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="RowBackground" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D3D"/>
        </Style>
        <Style Selector="DataGridRow:nth-child(2n) /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#252525"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#4CAF50"/>
        </Style>
        <Style Selector="CalendarDatePicker">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="HISTORIAL DE VENTAS"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Total: " Foreground="#AAAAAA" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalCount}" 
                               Foreground="#4CAF50" 
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#252525" Padding="10">
            <Grid RowDefinitions="Auto,Auto">
                <!-- Search and Date Filters -->
                <Border Grid.Row="0" 
                        Background="#2D2D2D" 
                        CornerRadius="5" 
                        Padding="10"
                        Margin="0,0,0,10">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Buscar Folio:" 
                                   Foreground="#AAAAAA" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="SearchTextBox"
                                 Grid.Column="1"
                                 Text="{Binding SearchText, Mode=TwoWay}"
                                 Watermark="Ingrese folio de venta..."
                                 Background="#3D3D3D"
                                 Foreground="White"
                                 BorderBrush="#555555"
                                 Padding="8,6"
                                 Margin="0,0,15,0"/>
                        
                        <!-- Date Filters -->
                        <TextBlock Grid.Column="2"
                                   Text="Desde:" 
                                   Foreground="#AAAAAA" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <CalendarDatePicker Grid.Column="3"
                                            SelectedDate="{Binding FilterDateFrom}"
                                            SelectedDateFormat="Short"
                                            Background="#3D3D3D"
                                            Foreground="White"
                                            Margin="0,0,10,0"/>
                        
                        <TextBlock Grid.Column="4"
                                   Text="Hasta:" 
                                   Foreground="#AAAAAA" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <CalendarDatePicker Grid.Column="5"
                                            SelectedDate="{Binding FilterDateTo}"
                                            SelectedDateFormat="Short"
                                            Background="#3D3D3D"
                                            Foreground="White"
                                            Margin="0,0,10,0"/>
                        
                        <Button Grid.Column="6"
                                Content="Aplicar Filtros (F5)"
                                Command="{Binding ApplyFiltersCommand}"
                                Classes="filter"
                                Background="#0078D4"/>
                    </Grid>
                </Border>
                
                <!-- Quick Actions -->
                <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Acciones:" 
                                   Foreground="#AAAAAA" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <Button Content="F6 Limpiar Filtros"
                                Command="{Binding ClearFiltersCommand}"
                                Classes="filter"/>
                        <Button Content="F7 Buscar"
                                Command="{Binding ExecuteSearchCommand}"
                                Classes="filter"
                                Background="#FF9800"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="DataGridItems"
                  Grid.Row="2"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{ReflectionBinding SelectedItem, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FOLIO" Binding="{Binding Folio}" Width="180"/>
                <DataGridTextColumn Header="FECHA/HORA" Binding="{Binding FormattedDate}" Width="160"/>
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='{}{0:C2}'}" Width="130"/>
                <DataGridTextColumn Header="DESCUENTO" Binding="{Binding Discount, StringFormat='{}{0:C2}'}" Width="120"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding UserName}" Width="180"/>
                <DataGridTextColumn Header="MÉTODO DE PAGO" Binding="{Binding PaymentSummary}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <Border Grid.Row="3" Background="#252525" Padding="10">
            <Grid ColumnDefinitions="*,Auto,*">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Content="◀ Anterior"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CanGoBack}"
                            Classes="filter"/>
                    <TextBlock VerticalAlignment="Center" Foreground="White">
                        <Run Text="Página "/>
                        <Run Text="{Binding CurrentPage}"/>
                        <Run Text=" de "/>
                        <Run Text="{Binding TotalPages}"/>
                    </TextBlock>
                    <Button Content="Siguiente ▶"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoForward}"
                            Classes="filter"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <Border Grid.Row="4" Background="#2D2D2D" Padding="15">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,*">
                <Button Grid.Column="1"
                        Command="{Binding ViewDetailCommand}"
                        Classes="primary"
                        Margin="5,0"
                        IsEnabled="{Binding HasSelectedItem}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Enter"/>
                        <TextBlock Text="Ver Detalle"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2"
                        Command="{Binding ExportToExcelCommand}"
                        Background="#2E7D32"
                        Foreground="White"
                        Padding="20,10"
                        Margin="5,0">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="F8"/>
                        <TextBlock Text="Exportar Excel"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3"
                        Content="Salir (Esc)"
                        Command="{Binding CloseCommand}"
                        Background="#555555"
                        Foreground="White"
                        Padding="20,10"
                        Margin="5,0"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                IsVisible="{Binding IsLoading}">
            <Border Background="#2D2D2D" 
                    Padding="30" 
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="15">
                    <ProgressBar IsIndeterminate="True" Width="200"/>
                    <TextBlock Text="Cargando..." 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
