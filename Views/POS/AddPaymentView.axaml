<!-- AddPaymentView.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        xmlns:converters="using:CasaCejaRemake.Helpers"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
        x:Class="CasaCejaRemake.Views.POS.AddPaymentView"
        x:DataType="vm:AddPaymentViewModel"
        Title="Agregar Abono"
        Width="800" Height="750"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Button.quick-amount">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.quick-amount:pointerover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style Selector="TextBlock.value">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="{Binding HeaderColor}" Padding="15">
            <StackPanel>
                <TextBlock Text="AGREGAR ABONO"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Type}"
                           FontSize="12"
                           Foreground="#DDDDDD"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Credit/Layaway Info -->
        <Border Grid.Row="1" Background="#252525" Padding="15" Margin="15,10,15,0" CornerRadius="5">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                    <TextBlock Text="Folio" Classes="label"/>
                    <TextBlock Text="{Binding Folio}" Classes="value"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                    <TextBlock Text="Cliente" Classes="label"/>
                    <TextBlock Text="{Binding CustomerName}" Classes="value"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Vencimiento" Classes="label"/>
                    <TextBlock Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}" Classes="value"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Dias restantes" Classes="label"/>
                    <TextBlock Text="{Binding DaysRemaining}" 
                               Classes="value"
                               Foreground="{Binding DaysRemainingColor}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Balances -->
        <Border Grid.Row="2" Background="#252525" Padding="15" Margin="15,10,15,0" CornerRadius="5">
            <Grid ColumnDefinitions="*,*,*,*">
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL" Classes="label" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Total, StringFormat='{}{0:C2}'}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="YA PAGADO" Classes="label" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPaid, StringFormat='{}{0:C2}'}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="ABONANDO" Classes="label" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalCurrentlyPaid, StringFormat='{}{0:C2}'}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#2196F3"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="RESTANTE" Classes="label" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentRemaining, StringFormat='{}{0:C2}'}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{Binding CurrentRemainingColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Payment Input -->
        <Grid Grid.Row="3" Margin="15,10" ColumnDefinitions="180,*">
            
            <!-- Metodos de pago -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="MÃ‰TODO DE PAGO" FontSize="12" Foreground="#888" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Efectivo"
                        Background="{Binding IsEffectivoSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="12,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ’µ" FontSize="14"/>
                        <TextBlock Text="Efectivo"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Debito"
                        Background="{Binding IsDebitoSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="12,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ’³" FontSize="14"/>
                        <TextBlock Text="T. DÃ©bito"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Credito"
                        Background="{Binding IsCreditoSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="12,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ’³" FontSize="14"/>
                        <TextBlock Text="T. CrÃ©dito"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding SelectMethodCommand}" CommandParameter="Transferencia"
                        Background="{Binding IsTransferenciaSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#0078D4|#3D3D3D'}"
                        Foreground="White" Padding="12,10" Margin="3" CornerRadius="4" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ¦" FontSize="14"/>
                        <TextBlock Text="Transfer."/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Panel de pagos -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto">
                <!-- Input de monto actual -->
                <Border Grid.Row="0" Background="#252525" Padding="12" CornerRadius="4" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding CurrentMethodName, StringFormat='Agregar: {0}'}" 
                                       FontSize="13" FontWeight="Bold" Foreground="White"/>
                            <Button Grid.Column="1" Content="F1 Pagar Restante" 
                                    Command="{Binding PayRemainingCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="8,4" FontSize="10"/>
                        </Grid>
                        
                        <TextBox x:Name="TxtCurrentAmount"
                                 Text="{Binding CurrentAmountText, Mode=TwoWay}"
                                 FontSize="20" FontWeight="Bold"
                                 Padding="8" Margin="0,8,0,0"
                                 Background="#3D3D3D" Foreground="White"
                                 BorderThickness="0" CornerRadius="4"
                                 HorizontalContentAlignment="Right"/>
                        
                        <WrapPanel Margin="0,8,0,0">
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F2]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="20" Margin="0">+$20</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F3]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="50" Margin="0">+$50</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F4]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="100" Margin="0">+$100</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F5]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="200" Margin="0">+$200</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F6]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding AddToCurrentCommand}" CommandParameter="500" Margin="0">+$500</Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="[F7]" FontSize="10" Foreground="#888" HorizontalAlignment="Center"/>
                                <Button Classes="quick-amount" Command="{Binding ClearCurrentCommand}" Margin="0">Limpiar</Button>
                            </StackPanel>
                        </WrapPanel>
                        
                        <Button Content="âž• [Enter] Agregar Pago" 
                                Command="{Binding AddPaymentCommand}"
                                Background="#0078D4" Foreground="White"
                                Padding="12,8" Margin="0,8,0,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Lista de pagos agregados (Dynamic Height) -->
                <Border Grid.Row="1" Background="#252525" Padding="10" CornerRadius="4" Margin="0,0,0,10">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Row="0" Text="PAGOS REGISTRADOS" FontSize="12" Foreground="#888" FontWeight="Bold" Margin="0,0,0,8"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PaymentsList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,3">
                                            <TextBlock Text="{Binding Method}" Foreground="White" VerticalAlignment="Center" FontSize="13"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='{}{0:C2}'}" 
                                                       Foreground="#4CAF50" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center" FontSize="13"/>
                                            <Button Grid.Column="2" Content="âœ•" 
                                                    Command="{Binding $parent[Window].((vm:AddPaymentViewModel)DataContext).RemovePaymentCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="#F44336" Foreground="White" Padding="8,4" FontSize="10"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="No hay pagos registrados" 
                                       Foreground="#666" FontStyle="Italic"
                                       IsVisible="{Binding !HasPayments}"
                                       HorizontalAlignment="Center" Margin="0,8" FontSize="12"/>
                            
                            <!-- Cambio (solo si efectivo y sobra) -->
                            <Border Background="#1A3D1A" Padding="10" CornerRadius="4" Margin="0,10,0,0"
                                    IsVisible="{Binding ShowChange}">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="CAMBIO:" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Change, StringFormat='{}{0:C2}'}" 
                                               FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Notes -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Notas (opcional)" Classes="label"/>
                    <TextBox Text="{Binding Notes}"
                             Watermark="Notas del abono..."
                             Height="45"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Error + Buttons -->
        <Border Grid.Row="4" Background="#2D2D2D" Padding="10">
            <StackPanel>
                <!-- Error Message -->
                <Border IsVisible="{Binding HasError}"
                        Background="#FF5252"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,0,10">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Buttons -->
                <Grid ColumnDefinitions="*,*">
                    <Button Grid.Column="0"
                            Command="{Binding ConfirmCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="20,12"
                            HorizontalAlignment="Center"
                            IsEnabled="{Binding !IsProcessing}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="F8"/>
                            <TextBlock Text="Confirmar Abono"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1"
                            Content="Cancelar (Esc)"
                            Command="{Binding CancelCommand}"
                            Background="#555555"
                            Foreground="White"
                            Padding="20,12"
                            HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
