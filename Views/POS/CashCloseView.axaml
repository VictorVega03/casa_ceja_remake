<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        x:Class="CasaCejaRemake.Views.POS.CashCloseView"
        x:DataType="vm:CashCloseViewModel"
        Title="Corte de Caja"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style Selector="Border.section">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="TextBlock.value">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="TextBlock.value-green">
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="CORTE DE CAJA" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Folio, StringFormat='Folio: {0}'}" 
                       FontSize="14" 
                       Foreground="#888" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Contenido principal - 2 columnas -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*">
            
            <!-- COLUMNA IZQUIERDA -->
            <ScrollViewer Grid.Column="0" Margin="0,0,10,0">
                <StackPanel>
                    
                    <!-- Información de apertura -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="INFORMACIÓN DEL TURNO" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Fondo de Apertura:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value-green" Text="{Binding OpeningAmount, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Fecha Apertura:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding OpeningDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Cajero:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Text="{Binding UserName}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Ventas directas:"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Text="{Binding SalesCount}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- VENTAS DIRECTAS -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="VENTAS DIRECTAS" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Efectivo:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value-green" Text="{Binding TotalCash, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Tarjeta Débito:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding TotalDebit, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Tarjeta Crédito:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Text="{Binding TotalCredit, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Transferencias:"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Text="{Binding TotalTransfer, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Classes="label" Text="Cheques:"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Classes="value" Text="{Binding TotalCheck, StringFormat='${0:N2}'}"/>
                                <!-- Subtotal -->
                                <Border Grid.Row="5" Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#444" Margin="0,8,0,0" Padding="0,8,0,0">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0" Text="Total Ventas Directas:" FontWeight="SemiBold" Foreground="#CCC"/>
                                        <TextBlock Grid.Column="1" Text="{Binding TotalSalesDirectas, StringFormat='${0:N2}'}" FontWeight="Bold" Foreground="White"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- CRÉDITOS CREADOS -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="CRÉDITOS CREADOS" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Cantidad:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value" Text="{Binding CreditCount}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Total (productividad):"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding CreditTotalCreated, StringFormat='${0:N2}'}" Foreground="#64B5F6"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Efectivo recibido:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value-green" Text="{Binding CreditCash, StringFormat='${0:N2}'}"/>
                                <!-- Divider -->
                                <Border Grid.Row="3" Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#444" Margin="0,8,0,0" Padding="0,8,0,0">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0" Text="Total Créditos (valor):" FontWeight="SemiBold" Foreground="#CCC"/>
                                        <TextBlock Grid.Column="1" Text="{Binding CreditTotalCreated, StringFormat='${0:N2}'}" FontWeight="Bold" Foreground="#64B5F6"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- APARTADOS CREADOS -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="APARTADOS CREADOS" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Cantidad:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value" Text="{Binding LayawayCount}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Total (productividad):"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding LayawayTotalCreated, StringFormat='${0:N2}'}" Foreground="#FFB74D"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Efectivo recibido:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value-green" Text="{Binding LayawayCash, StringFormat='${0:N2}'}"/>
                                <!-- Divider -->
                                <Border Grid.Row="3" Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#444" Margin="0,8,0,0" Padding="0,8,0,0">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0" Text="Total Apartados (valor):" FontWeight="SemiBold" Foreground="#CCC"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LayawayTotalCreated, StringFormat='${0:N2}'}" FontWeight="Bold" Foreground="#FFB74D"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- COLUMNA DERECHA -->
            <ScrollViewer Grid.Column="1" Margin="10,0,0,0">
                <StackPanel>

                    <!-- TOTAL DEL CORTE (Productividad) -->
                    <Border Background="#1A237E" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="TOTAL DEL CORTE" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="(Productividad del turno)" FontSize="10" Foreground="#9FA8DA" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalDelCorte, StringFormat='${0:N2}'}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#64B5F6"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,8,0,0">
                                <TextBlock Text="Ventas + Créditos + Apartados" FontSize="10" Foreground="#9FA8DA"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Gastos del turno -->
                    <Border Classes="section">
                        <StackPanel>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="GASTOS DEL TURNO" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Grid.Column="1" Classes="value" Text="{Binding TotalExpenses, StringFormat='-${0:N2}'}" Foreground="#F44336"/>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding Expenses}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                            <TextBlock Grid.Column="0" Text="{Binding Concept}" Classes="label"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='${0:N2}'}" Foreground="#F44336"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Ingresos del turno -->
                    <Border Classes="section">
                        <StackPanel>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="INGRESOS DEL TURNO" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Grid.Column="1" Classes="value-green" Text="{Binding TotalIncome, StringFormat='+${0:N2}'}"/>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding Incomes}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                            <TextBlock Grid.Column="0" Text="{Binding Concept}" Classes="label"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='${0:N2}'}" Foreground="#4CAF50"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- EFECTIVO EN CAJA -->
                    <Border Background="#1B5E20" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="EFECTIVO ESPERADO EN CAJA" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ExpectedAmount, StringFormat='${0:N2}'}" 
                                       FontSize="26" 
                                       FontWeight="Bold" 
                                       Foreground="#81C784"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Fondo + Efectivo Ventas + Efectivo Abonos + Ingresos - Gastos" 
                                       FontSize="9" 
                                       Foreground="#A5D6A7" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Monto declarado -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="MONTO DECLARADO POR CAJERO" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="$" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="TxtDeclaredAmount"
                                         Grid.Column="1"
                                         Text="{Binding DeclaredAmountString, Mode=TwoWay}"
                                         FontSize="22"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Diferencia -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="DIFERENCIA" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DifferenceText}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#FFC107"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Notas del corte -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="NOTAS DEL CORTE" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <TextBox Text="{Binding Notes, Mode=TwoWay}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="100"
                                     Watermark="Escribir observaciones o notas sobre el turno..."/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Error message -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ErrorMessage}" 
                   Foreground="#F44336"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"/>

        <!-- Botones -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,15,0,0">
            <Button Grid.Column="0" 
                    Classes="secondary"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="1" 
                    Classes="primary"
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="F5" FontWeight="Bold"/>
                    <TextBlock Text="Confirmar Corte"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
