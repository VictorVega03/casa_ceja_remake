<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CasaCejaRemake.ViewModels.POS"
        x:Class="CasaCejaRemake.Views.POS.CashCloseView"
        x:DataType="vm:CashCloseViewModel"
        Title="Corte de Caja"
        Width="800"
        Height="650"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style Selector="Border.section">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style Selector="TextBlock.value">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="TextBlock.value-green">
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="CORTE DE CAJA" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Folio, StringFormat='Folio: {0}'}" 
                       FontSize="14" 
                       Foreground="#888" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Contenido principal - 2 columnas -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*">
            
            <!-- COLUMNA IZQUIERDA -->
            <ScrollViewer Grid.Column="0" Margin="0,0,10,0">
                <StackPanel>
                    
                    <!-- Información de apertura -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="INFORMACIÓN DEL TURNO" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Fondo de Apertura:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value-green" Text="{Binding OpeningAmount, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Fecha Apertura:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding OpeningDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Cajero:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Text="{Binding UserName}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Ventas en efectivo -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="VENTAS EN EFECTIVO" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Total Ventas Efectivo:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value-green" Text="{Binding TotalCash, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Número de Ventas:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding SalesCount}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Apartados y Créditos -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="ABONOS (EFECTIVO)" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Efectivo de Apartados:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value-green" Text="{Binding LayawayCash, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Efectivo de Créditos:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value-green" Text="{Binding CreditPaymentsCash, StringFormat='${0:N2}'}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Gastos del turno -->
                    <Border Classes="section">
                        <StackPanel>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="GASTOS DEL TURNO" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Grid.Column="1" Classes="value" Text="{Binding TotalExpenses, StringFormat='-${0:N2}'}" Foreground="#F44336"/>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding Expenses}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                            <TextBlock Grid.Column="0" Text="{Binding Concept}" Classes="label"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='${0:N2}'}" Foreground="#F44336"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- COLUMNA DERECHA -->
            <ScrollViewer Grid.Column="1" Margin="10,0,0,0">
                <StackPanel>
                    
                    <!-- Ventas con otros métodos -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="VENTAS POR MÉTODO DE PAGO" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Tarjeta Débito:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value" Text="{Binding TotalDebit, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Tarjeta Crédito:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Text="{Binding TotalCredit, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Transferencias:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Text="{Binding TotalTransfer, StringFormat='${0:N2}'}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Cheques:"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Text="{Binding TotalCheck, StringFormat='${0:N2}'}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Ingresos del turno -->
                    <Border Classes="section">
                        <StackPanel>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="INGRESOS DEL TURNO" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Grid.Column="1" Classes="value-green" Text="{Binding TotalIncome, StringFormat='+${0:N2}'}"/>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding Incomes}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                            <TextBlock Grid.Column="0" Text="{Binding Concept}" Classes="label"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='${0:N2}'}" Foreground="#4CAF50"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Monto declarado -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="EFECTIVO EN CAJA" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" Margin="0,0,0,15">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Efectivo Esperado:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value-green" Text="{Binding ExpectedAmount, StringFormat='${0:N2}'}" FontSize="18"/>
                            </Grid>
                            
                            <TextBlock Text="MONTO DECLARADO" Classes="label" Margin="0,0,0,5"/>
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="$" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="TxtDeclaredAmount"
                                         Grid.Column="1"
                                         Text="{Binding DeclaredAmount, Mode=TwoWay, StringFormat='{}{0:F2}'}"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Diferencia -->
                    <Border Classes="section">
                        <StackPanel>
                            <TextBlock Text="DIFERENCIA" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DifferenceText}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#FFC107"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Error message -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ErrorMessage}" 
                   Foreground="#F44336"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"/>

        <!-- Botones -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,15,0,0">
            <Button Grid.Column="0" 
                    Classes="secondary"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Esc" FontWeight="Bold"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="1" 
                    Classes="primary"
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="F5" FontWeight="Bold"/>
                    <TextBlock Text="Confirmar Corte"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
