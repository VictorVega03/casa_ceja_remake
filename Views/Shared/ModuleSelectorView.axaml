                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="BorderBrush" Value="#4CAF50" />
