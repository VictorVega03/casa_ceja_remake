<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.Shared"
        mc:Ignorable="d"
        d:DesignWidth="650" d:DesignHeight="700"
        x:Class="CasaCejaRemake.Views.Shared.PosTerminalConfigView"
        x:DataType="vm:PosTerminalConfigViewModel"
        Title="ConfiguraciÃ³n del Terminal POS"
        Width="650"
        SizeToContent="Height"
        MaxHeight="800"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        <Style Selector="TextBlock.section-title">
            <Setter Property="Foreground" Value="#4FC3F7" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,24,0,12" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
        <Style Selector="ComboBox:pointerover">
            <Setter Property="Background" Value="#353535" />
            <Setter Property="BorderBrush" Value="#4FC3F7" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="#4FC3F7" />
        </Style>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style Selector="Button.refresh">
            <Setter Property="Background" Value="#FF9800" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.refresh:pointerover">
            <Setter Property="Background" Value="#FFA726" />
        </Style>
        <Style Selector="Button.cancel">
            <Setter Property="Background" Value="#404040" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.cancel:pointerover">
            <Setter Property="Background" Value="#505050" />
        </Style>
        <Style Selector="Button.save">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style Selector="Button.save:pointerover">
            <Setter Property="Background" Value="#66BB6A" />
        </Style>
    </Window.Styles>

    <StackPanel>

        <!-- ===== HEADER ===== -->
        <Border Background="#252525" Padding="28,20">
            <Grid ColumnDefinitions="Auto,*">
                <Border Grid.Column="0"
                        Width="50" Height="50"
                        Background="#2196F3"
                        CornerRadius="10"
                        Margin="0,0,16,0">
                    <TextBlock Text="ðŸ–¥ï¸" 
                               FontSize="26" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="ConfiguraciÃ³n del Terminal POS"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock Text="Configurar tickets y parÃ¡metros de este terminal"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENT ===== -->
        <StackPanel Margin="28,20,28,0" Spacing="16">

                <!-- ========== IDENTIFICACIÃ“N DEL TERMINAL ========== -->
                <Border Background="#252525" 
                        CornerRadius="8" 
                        Padding="20,18"
                        BorderBrush="#404040"
                        BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ·ï¸" FontSize="18" VerticalAlignment="Center" />
                            <TextBlock Classes="section-title" 
                                       Text="IdentificaciÃ³n del Terminal"
                                       Margin="0" />
                        </StackPanel>

                        <TextBlock Classes="label" Text="ID de Terminal:" />
                        <TextBox Text="{Binding TerminalId}"
                                 IsReadOnly="{Binding IsReadOnlyForCajero}"
                                 Watermark="Ej: CAJA-01" />

                        <TextBlock Classes="label" Text="Nombre de Terminal (opcional):" />
                        <TextBox Text="{Binding TerminalName}"
                                 Watermark="Ej: Caja Principal" />
                    </StackPanel>
                </Border>

                <!-- ========== PARÃMETROS DEL TICKET ========== -->
                <Border Background="#252525" 
                        CornerRadius="8" 
                        Padding="20,18"
                        BorderBrush="#404040"
                        BorderThickness="1"
                        Margin="0,16,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸŽ«" FontSize="18" VerticalAlignment="Center" />
                            <TextBlock Classes="section-title" 
                                       Text="ParÃ¡metros del Ticket"
                                       Margin="0" />
                        </StackPanel>

                        <TextBlock Classes="label" Text="Mensaje al pie del ticket:" />
                        <TextBox Text="{Binding TicketFooter}"
                                 Watermark="Ej: Â¡Gracias por su compra!" />

                        <Grid ColumnDefinitions="*,16,*" Margin="0,8,0,0">
                            <StackPanel Grid.Column="0">
                                <TextBlock Classes="label" Text="TamaÃ±o de fuente:" />
                                <ComboBox ItemsSource="{Binding FontSizeOptions}"
                                          SelectedItem="{Binding SelectedFontSize}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Classes="label" Text="Ancho de lÃ­nea (caracteres):" />
                                <ComboBox ItemsSource="{Binding TicketLineWidthOptions}"
                                          SelectedItem="{Binding SelectedTicketLineWidth}" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Classes="label" Text="Tipo de fuente:" />
                        <ComboBox ItemsSource="{Binding FontFamilyOptions}"
                                  SelectedItem="{Binding SelectedFontFamily}" />
                    </StackPanel>
                </Border>

        </StackPanel>

        <!-- ===== FOOTER ===== -->
        <Border Background="#252525" Padding="28,18" Margin="0,20,0,0">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                <!-- Status Message -->
                <Border Grid.Row="0" 
                        Background="#1A3A1A"
                        Padding="14,10"
                        CornerRadius="6"
                        Margin="0,0,0,14"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="âœ“" 
                                   FontSize="16" 
                                   Foreground="#4CAF50"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="#81C784"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Botones -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Spacing="12">
                    <Button Content="Cancelar (Esc)"
                            Command="{Binding CloseCommand}"
                            Classes="cancel"
                            Width="140" 
                            Height="42"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />

                    <Button Content="Guardar Cambios"
                            Command="{Binding SaveCommand}"
                            Classes="save"
                            Width="160" 
                            Height="42"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </StackPanel>
</Window>
