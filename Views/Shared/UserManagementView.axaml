<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.Shared"
        xmlns:helpers="using:CasaCejaRemake.Helpers"
        mc:Ignorable="d"
        d:DesignWidth="900" d:DesignHeight="600"
        x:Class="CasaCejaRemake.Views.Shared.UserManagementView"
        x:DataType="vm:UserManagementViewModel"
        Title="{Binding Title}"
        Width="900" Height="600"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        Background="#1E1E1E">

    <Window.Resources>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="#4FC3F7"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#42A5F5"/>
        </Style>
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.danger:pointerover">
            <Setter Property="Background" Value="#E53935"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="DataGridRow:pointerover">
            <Setter Property="Background" Value="#333333"/>
        </Style>
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#252525" Padding="20">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                    <Border Background="#2D2D2D" CornerRadius="8" Width="48" Height="48">
                        <TextBlock Text="{Binding TitleIcon}" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="{Binding Subtitle}" 
                                   FontSize="12" 
                                   Foreground="#888"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TOOLBAR -->
        <Border Grid.Row="1" Padding="20,15" Background="#1E1E1E">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Search -->
                <TextBox Grid.Column="0" 
                         Width="300"
                         Watermark="Buscar por nombre, usuario o rol..."
                         Text="{Binding SearchText, Mode=TwoWay}"/>

                <!-- Info Helper -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="8" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Border Background="#2D2D2D" 
                            CornerRadius="4" 
                            Padding="10,5"
                            BorderBrush="#404040"
                            BorderThickness="1">
                        <TextBlock Foreground="#B0B0B0" FontSize="11">
                            <Run Text="Presiona" />
                            <Run Text="Enter" FontWeight="Bold" Foreground="#4FC3F7" />
                            <Run Text="para ver detalles" />
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Classes="primary" 
                            Command="{Binding AddUserCommand}"
                            Padding="15,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕"/>
                            <TextBlock Text="Nuevo Usuario"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <DataGrid Grid.Row="2" 
                  x:Name="UsersGrid"
                  Margin="20,0,20,10"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1"
                  BorderBrush="#333">
            <DataGrid.Columns>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="ROL" Binding="{Binding RoleName}" Width="*"/>
                <DataGridTemplateColumn Header="ESTADO" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Active, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#2E7D32|#C62828'}"
                                    CornerRadius="4" 
                                    Padding="8,4" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                <Panel>
                                    <TextBlock Text="ACTIVO" 
                                               IsVisible="{Binding Active}"
                                               Foreground="White" 
                                               FontSize="10" 
                                               FontWeight="Bold"/>
                                    <TextBlock Text="INACTIVO" 
                                               IsVisible="{Binding !Active}"
                                               Foreground="White" 
                                               FontSize="10" 
                                               FontWeight="Bold"/>
                                </Panel>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="ÚLTIMO ACCESO" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Panel>
                                <TextBlock Text="{Binding LastSyncText}" 
                                           IsVisible="{Binding HasLastSync}"
                                           VerticalAlignment="Center"
                                           Padding="10,0"/>
                                <TextBlock Text="Sin información" 
                                           IsVisible="{Binding !HasLastSync}"
                                           Foreground="#888"
                                           FontStyle="Italic"
                                           VerticalAlignment="Center"
                                           Padding="10,0"/>
                            </Panel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER -->
        <Border Grid.Row="3" Background="#252525" Padding="20">
            <Grid ColumnDefinitions="*,Auto">
                <!-- Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="#4FC3F7"/>
                </StackPanel>

                <!-- Footer Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Classes="danger" 
                            Command="{Binding DeactivateUserCommand}"
                            IsVisible="{Binding CanDeactivate}"
                            IsEnabled="{Binding SelectedUser, Converter={x:Static ObjectConverters.IsNotNull}}"
                            Content="Desactivar Usuario"
                            Padding="15,8"/>
                    
                    <Button Command="{Binding EditUserCommand}"
                            IsEnabled="{Binding SelectedUser, Converter={x:Static ObjectConverters.IsNotNull}}"
                            Content="Editar (F2)"
                            Padding="15,8"/>

                    <Button Command="{Binding CloseCommand}"
                            Content="Cerrar (Esc)"
                            Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" 
                Background="#80000000" 
                IsVisible="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <ProgressBar IsIndeterminate="True"/>
                <TextBlock Text="Cargando..." Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
