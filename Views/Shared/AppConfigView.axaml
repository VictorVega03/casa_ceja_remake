<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.Shared"
        mc:Ignorable="d"
        d:DesignWidth="600" d:DesignHeight="480"
        x:Class="CasaCejaRemake.Views.Shared.AppConfigView"
        x:DataType="vm:AppConfigViewModel"
        Title="Configurar Sucursal"
        Width="600" Height="480"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,10,0,6" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
        <Style Selector="ComboBox:pointerover">
            <Setter Property="Background" Value="#353535" />
            <Setter Property="BorderBrush" Value="#4FC3F7" />
        </Style>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style Selector="Button.cancel">
            <Setter Property="Background" Value="#404040" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.cancel:pointerover">
            <Setter Property="Background" Value="#505050" />
        </Style>
        <Style Selector="Button.save">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style Selector="Button.save:pointerover">
            <Setter Property="Background" Value="#66BB6A" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="#252525" Padding="28,20">
            <Grid ColumnDefinitions="Auto,*">
                <Border Grid.Column="0"
                        Width="50" Height="50"
                        Background="#4CAF50"
                        CornerRadius="10"
                        Margin="0,0,16,0">
                    <TextBlock Text="âš™ï¸" 
                               FontSize="28" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Configurar Sucursal"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock Text="Configurar sucursal del sistema"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENT ===== -->
        <Grid Grid.Row="1">
            <StackPanel Spacing="6" VerticalAlignment="Center" Margin="32,20">

                <!-- SecciÃ³n Principal -->
                <Border Background="#252525" 
                        CornerRadius="8" 
                        Padding="24,20"
                        BorderBrush="#404040"
                        BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,16">
                            <TextBlock Text="ðŸª" FontSize="20" VerticalAlignment="Center" />
                            <TextBlock Text="Sucursal Activa"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <TextBlock Text="Seleccione la sucursal en la que operarÃ¡ este equipo. Esta configuraciÃ³n afecta todas las operaciones realizadas desde esta computadora."
                                   FontSize="13"
                                   Foreground="#999999"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Margin="0,0,0,20" />

                        <TextBlock Classes="label" Text="Sucursal:" />
                        <ComboBox ItemsSource="{Binding Branches}"
                                  SelectedItem="{Binding SelectedBranch}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ðŸ“" FontSize="14" VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Nota de advertencia -->
                <Border Background="#3A2A1A" 
                        CornerRadius="8" 
                        Padding="16,14"
                        BorderBrush="#FF9800"
                        BorderThickness="1"
                        Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="âš ï¸" 
                                   FontSize="24" 
                                   VerticalAlignment="Top"
                                   Margin="0,2,0,0" />
                        <StackPanel>
                            <TextBlock Text="Importante"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#FFA726"
                                       Margin="0,0,0,4" />
                            <TextBlock Text="Al cambiar de sucursal, la aplicaciÃ³n se cerrarÃ¡ automÃ¡ticamente para aplicar los cambios correctamente."
                                       FontSize="12"
                                       Foreground="#FFB74D"
                                       TextWrapping="Wrap"
                                       LineHeight="18" />
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>

        <!-- ===== FOOTER ===== -->
        <Border Grid.Row="2" Background="#252525" Padding="28,18" BorderBrush="#404040" BorderThickness="0,1,0,0">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                <!-- Status Message -->
                <Border Grid.Row="0" 
                        Background="#1A3A1A"
                        Padding="14,10"
                        CornerRadius="6"
                        Margin="0,0,0,14"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="âœ“" 
                                   FontSize="16" 
                                   Foreground="#4CAF50"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="#81C784"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Botones -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Spacing="12">
                    <Button Content="Cancelar (Esc)"
                            Command="{Binding CloseCommand}"
                            Classes="cancel"
                            Width="140" 
                            Height="42"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />

                    <Button Content="Guardar Cambios"
                            Command="{Binding SaveCommand}"
                            Classes="save"
                            Width="160" 
                            Height="42"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
