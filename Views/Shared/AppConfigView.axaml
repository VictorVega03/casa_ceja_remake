<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.Shared"
        mc:Ignorable="d"
        d:DesignWidth="600" d:DesignHeight="560"
        x:Class="CasaCejaRemake.Views.Shared.AppConfigView"
        x:DataType="vm:AppConfigViewModel"
        Title="ConfiguraciÃ³n General"
        Width="600"
        SizeToContent="Height"
        MaxHeight="800"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Focusable="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
        <Style Selector="ComboBox:pointerover">
            <Setter Property="Background" Value="#353535" />
            <Setter Property="BorderBrush" Value="#4FC3F7" />
        </Style>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style Selector="Button.refresh">
            <Setter Property="Background" Value="#FF9800" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.refresh:pointerover">
            <Setter Property="Background" Value="#FFA726" />
        </Style>
        <Style Selector="Button.cancel">
            <Setter Property="Background" Value="#404040" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.cancel:pointerover">
            <Setter Property="Background" Value="#505050" />
        </Style>
        <Style Selector="Button.save">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style Selector="Button.save:pointerover">
            <Setter Property="Background" Value="#66BB6A" />
        </Style>
    </Window.Styles>

    <StackPanel>

        <!-- ===== HEADER ===== -->
        <Border Background="#252525" Padding="28,20">
            <Grid ColumnDefinitions="Auto,*">
                <Border Grid.Column="0"
                        Width="50" Height="50"
                        Background="#2196F3"
                        CornerRadius="10"
                        Margin="0,0,16,0">
                    <TextBlock Text="âš™ï¸" 
                               FontSize="28" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="ConfiguraciÃ³n General"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock Text="Sucursal e impresora de este equipo"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENT ===== -->
        <StackPanel Margin="28,16,28,0" Spacing="4">
            <StackPanel Spacing="4">

                <!-- ========== SUCURSAL ========== -->
                <Border Background="#252525" 
                        CornerRadius="8" 
                        Padding="20,18"
                        BorderBrush="#404040"
                        BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,8">
                            <TextBlock Text="Sucursal Activa"
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       VerticalAlignment="Center"
                                       Margin="0" />
                        </StackPanel>

                        <TextBlock Text="Al cambiar de sucursal se requiere autorizaciÃ³n de administrador y la app se reiniciarÃ¡."
                                   FontSize="11"
                                   Foreground="#999999"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12" />

                        <TextBlock Classes="label" Text="Sucursal:" />
                        <Grid ColumnDefinitions="*,Auto">
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding Branches}"
                                      SelectedItem="{Binding SelectedBranch}"
                                      IsEnabled="{Binding BranchChangeUnlocked}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="ðŸ“" FontSize="14" VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="1"
                                    Content="{Binding BranchLockButtonText}"
                                    Command="{Binding ToggleBranchLockCommand}"
                                    Margin="8,0,0,0"
                                    Padding="12,8"
                                    Height="40"
                                    FontSize="12"
                                    Background="#FF9800"
                                    Foreground="White" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ========== IMPRESORA ========== -->
                <Border Background="#252525" 
                        CornerRadius="8" 
                        Padding="20,18"
                        BorderBrush="#404040"
                        BorderThickness="1"
                        Margin="0,12,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ–¨ï¸" FontSize="18" VerticalAlignment="Center" />
                            <TextBlock Text="ConfiguraciÃ³n de Impresora"
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="#4FC3F7"
                                       VerticalAlignment="Center"
                                       Margin="0" />
                        </StackPanel>

                        <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                            <TextBlock Classes="label" Text="Impresora:" Grid.Column="0" />
                            <Button Grid.Column="1" 
                                    Content="Actualizar"
                                    Command="{Binding RefreshPrintersCommand}"
                                    Classes="refresh"
                                    FontSize="11" 
                                    Padding="10,6"
                                    Height="28"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,5" />
                        </Grid>
                        <ComboBox ItemsSource="{Binding AvailablePrinters}"
                                  SelectedItem="{Binding SelectedPrinter}" />

                        <TextBlock Classes="label" Text="Tipo de ImpresiÃ³n:" />
                        <ComboBox ItemsSource="{Binding PrintFormatOptions}"
                                  SelectedItem="{Binding SelectedPrintFormat}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}">
                                                <Binding />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>

            </StackPanel>
        </StackPanel>

        <!-- ===== FOOTER ===== -->
        <Border Background="#252525" Padding="28,18" Margin="0,16,0,0" BorderBrush="#404040" BorderThickness="0,1,0,0">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                <!-- Status Message -->
                <Border Grid.Row="0" 
                        Background="#1A3A1A"
                        Padding="14,10"
                        CornerRadius="6"
                        Margin="0,0,0,14"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="âœ“" 
                                   FontSize="16" 
                                   Foreground="#4CAF50"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="#81C784"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Botones -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Spacing="12">
                    <Button Content="Cancelar (Esc)"
                            Command="{Binding CloseCommand}"
                            Classes="cancel"
                            Width="140" 
                            Height="42"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />

                    <Button Content="Guardar Cambios"
                            Command="{Binding SaveCommand}"
                            Classes="save"
                            Width="160" 
                            Height="42"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </StackPanel>
</Window>
