<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CasaCejaRemake.ViewModels.Shared"
        mc:Ignorable="d"
        d:DesignWidth="500" d:DesignHeight="350"
        x:Class="CasaCejaRemake.Views.Shared.AppConfigView"
        x:DataType="vm:AppConfigViewModel"
        Title="ConfiguraciÃ³n General"
        Width="500" Height="350"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#2D2D30">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,12,0,6" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Height" Value="38" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="24,16">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="âš™" FontSize="24" Foreground="#4FC3F7" VerticalAlignment="Center" />
                <TextBlock Text="ConfiguraciÃ³n General"
                           FontSize="22" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- ===== CONTENT ===== -->
        <ScrollViewer Grid.Row="1" Padding="30,20">
            <StackPanel Spacing="4">

                <TextBlock Text="ðŸª Sucursal Actual"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="#4FC3F7"
                           Margin="0,0,0,8" />

                <TextBlock Text="Seleccione la sucursal en la que opera este equipo."
                           FontSize="12"
                           Foreground="#999999"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12" />

                <TextBlock Classes="label" Text="Sucursal:" />
                <ComboBox ItemsSource="{Binding Branches}"
                          SelectedItem="{Binding SelectedBranch}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="13" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="â„¹ï¸ Nota: Esta configuraciÃ³n afecta todas las operaciones de esta computadora."
                           FontSize="11"
                           Foreground="#FF9800"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0" />

            </StackPanel>
        </ScrollViewer>

        <!-- ===== FOOTER ===== -->
        <Border Grid.Row="2" Background="#1E1E1E" Padding="24,14">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                <!-- Fila 1: Status Message (separado, arriba de botones) -->
                <Border Grid.Row="0" 
                        Background="#252525"
                        Padding="12,8"
                        CornerRadius="4"
                        Margin="0,0,0,12"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#81C784"
                               FontSize="13"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center" />
                </Border>

                <!-- Fila 2: Botones -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Spacing="12">
                    <Button Content="Cancelar"
                            Command="{Binding CloseCommand}"
                            Width="110" Height="38"
                            HorizontalContentAlignment="Center" />

                    <Button Content="ðŸ’¾ Guardar"
                            Command="{Binding SaveCommand}"
                            Width="130" Height="38"
                            Background="#2196F3"
                            Foreground="White"
                            FontWeight="SemiBold"
                            HorizontalContentAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
